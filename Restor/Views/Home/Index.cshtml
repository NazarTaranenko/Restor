@{
    ViewData["Title"] = "Home Page";
}

@model List<Meal>

<div class="flex-container">
  <div class="flex-item">
    <img src="~/head.png" width="100%" height="500px" alt="Шапка">
  </div>
<div class="flex-item">
  <div class="recomendation">
    <h1>
      Рекомендовано
    </h1>
    <div class="burger">
    @foreach (Meal item in Model){
    <table >
  <tbody>
  <tr>
    <td><img src =@item.Srcimg width="200px" alt="img"></td>
    <th>@item.Name</th>
      <td >@item.Description</td>
      <td>
          <a class="zamov" asp-action="Index" asp-controller="Order">Замовити</a>
      </td>
  </tr>
  </tbody>
</table>
    }
</div>
</div>
</div>
</div>